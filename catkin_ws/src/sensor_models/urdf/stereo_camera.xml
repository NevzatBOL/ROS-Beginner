<?xml version="1.0"?>
<robot name="sensor_models" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <xacro:include filename="$(find sensor_models)/urdf/stereo_camera.gazebo"/>
  <link name="camera_frame">
    <visual>
      <geometry>
        <box size="0.2 0.6 0.2"/>
      </geometry>
    </visual>
    <collision>
      <geometry>
        <box size="0.2 0.6 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>
</robot>
